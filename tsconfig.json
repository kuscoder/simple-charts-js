{
   "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "dom"],
      "declaration": true,
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "Bundler",
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "paths": {
         "@/*": ["./src/*"]
      }
   },
   "include": ["src"],
   "exclude": ["node_modules", "dist", "test", "vite.config.ts", "commitlint.config.js"]
}
